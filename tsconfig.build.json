{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./typings",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "baseUrl": "./",
    "target": "es2015",
    "types": ["node"],
    "paths": {
      "x-library": ["src/index.ts"],
      "x-library/*": ["src/*"],
      "x-library/resolver/*": ["src/resolver/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/**/*"]
}
